@{
    ViewData["Title"] = "Lecturer Claim";
}
<h2>Submit Monthly Claim</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@err.ErrorMessage</div>
        }
    </div>
}

<form asp-action="LecturerClaim" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Lecturer Name</label>
        <input name="lecturerName" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Hours Worked</label>
        <input name="hoursWorked" type="number" class="form-control" min="1" />
    </div>
    <div class="mb-3">
        <label class="form-label">Hourly Rate</label>
        <input name="hourlyRate" type="number" step="0.01" class="form-control" min="0" />
    </div>
    <div class="mb-3">
        <label class="form-label">Additional Notes</label>
        <textarea name="notes" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Upload Supporting Document</label>
        <input id="supportDoc" name="supportDoc" type="file" class="form-control" />
        <small id="fileName" class="form-text text-muted mt-2"></small>
    </div>
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>

<script>
    document.getElementById('supportDoc').addEventListener('change', function (e) {
        var f = e.target.files[0];
        document.getElementById('fileName').textContent = f ? "Selected file: " + f.name : "";
    });
</script>